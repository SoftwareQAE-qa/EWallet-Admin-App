{
  "name": "ewallet-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright tests for EWallet application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:chrome": "playwright test --project=chrome",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "install-browsers": "playwright install",
    "codegen": "playwright codegen",
    "auth:setup": "playwright test --global-setup=global-setup.ts",
    "auth:check": "node scripts/auth-setup.js check",
    "auth:cleanup": "node scripts/auth-setup.js cleanup",
    "test:add-new-order": "playwright test tests/add-new-order-cases.spec.ts --project=chrome",
    "test:import-orders": "playwright test tests/import-orders-cases.spec.ts --project=chrome",
    "test:import-orders-basic": "playwright test tests/import-orders-basic.spec.ts --project=chrome",
    "test:login": "playwright test tests/login-cases.spec.ts --project=chrome-no-auth",
    "test:login:headed": "playwright test tests/login-cases.spec.ts --project=chrome-no-auth --headed"
  },
  "keywords": ["playwright", "testing", "ewallet"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.0.0",
    "otplib": "^12.0.0",
    "typescript": "^5.0.0"
  }
}
